<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="50dp"
    android:orientation="horizontal" 
    android:paddingTop="10dp"
    android:paddingLeft="10dp"
    android:gravity="bottom"
    android:background="@color/fragment_one_bg"
    >
    <ImageView 
        android:layout_marginLeft="5dp"
        android:id="@+id/iv_index"
        android:paddingRight="10dp"
        android:layout_alignParentRight="true"
        android:layout_centerHorizontal="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/index_sharp_right"
        />
    <LinearLayout 
        
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >
        <TextView 
            
            android:id="@+id/tv_cp_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="医院代表--实习生"
            />
        <TextView 
            android:gravity="bottom"
            android:layout_marginTop="5dp"
            android:id="@+id/tv_group_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="中日友好医院"
            />
    </LinearLayout>
    
    <LinearLayout 
        android:layout_toLeftOf="@id/iv_index"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >
        <TextView 
            android:id="@+id/tv_salary"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2500-3000/月"
            />
        <TextView 
            android:layout_gravity="right"
            android:layout_marginTop="5dp"
            android:id="@+id/tv_arrer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="朝阳区"
            />
    </LinearLayout>
    
</RelativeLayout>
