<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="50dp"
    android:orientation="horizontal" 
    android:background="@color/title_bg"
    android:gravity="center_vertical"
    >
    
    <ImageView 
        android:id="@+id/iv_title_left"
        android:paddingLeft="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/common_hearder_sharp_left"
        />
	<TextView 
	    android:gravity="center"
	    android:layout_width="0dp"
	    android:layout_weight="1"
	    android:id="@+id/tv_title_center"
	    android:layout_centerInParent="true"
	    android:textColor="@color/writer"
	    android:text="标题"
	    android:layout_height="wrap_content"
	    android:textSize="@dimen/text_size_18"
	    />
	<LinearLayout 
	    android:visibility="gone"
	    android:id="@+id/ll_title_center"
	    android:layout_centerInParent="true"
	    android:layout_width="0dp"
	    android:layout_weight="1"
	    android:layout_height="wrap_content"
	    android:orientation="horizontal"
	    android:gravity="center_vertical"
	    >
	    <TextView 
	        android:textSize="@dimen/text_size_16"
	        android:textColor="@color/writer"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:text="北京"
	        />
	    <ImageView 
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:src="@drawable/apply_sharp_down"
	        />
	    
	    <LinearLayout 
	        android:padding="3dp"
	        android:layout_width="fill_parent"
	        android:layout_height="wrap_content"
	        android:orientation="horizontal"
	        android:gravity="center_vertical"
	        android:background="@drawable/search_bg"
	        >
	        <ImageView 
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:src="@drawable/apply_search_btn"
	            />
	        <EditText 
	            android:layout_marginRight="10dp"
	            android:hint="请输入关键字"
	            android:background="@color/writer"
	            android:layout_width="fill_parent"
	            android:layout_height="30dp"
	            />
	        
	    </LinearLayout>
	</LinearLayout>
	
	<ImageView 
	    android:id="@+id/iv_title_right"
	    android:paddingTop="8dp"
	    android:paddingBottom="8dp"
	    
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:src="@drawable/common_set_btn2"
	    />
</LinearLayout>
