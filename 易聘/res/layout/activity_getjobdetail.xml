<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/common_bg"
    android:orientation="vertical" >

    <include layout="@layout/fragment_title_two" />

    <com.dong.yiping.ui.BounceScrollView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/hand"
        android:layout_weight="1" >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="@color/writer"
                android:orientation="horizontal"
                android:padding="10dp" >

                <ImageView
                    android:layout_width="60dp"
                    android:layout_height="80dp"
                    android:src="@drawable/applyinfo_img" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="70dp"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="20dp"
                    android:src="@drawable/common_footer_bg" />

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:gravity="right"
                    android:orientation="vertical" >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="0dp"
                        android:layout_weight="2"
                        android:text="个人基本信息" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:text="文本信息文本信息" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:text="文本信息文本信息" />
                </LinearLayout>
            </LinearLayout>
            
            <TextView 
                android:background="@color/writer"
                android:textSize="@dimen/text_size_17"
                android:padding="10dp"
                android:textColor="@color/red"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="求职意向"
                />
            <TextView 
                android:background="@color/writer"
                android:paddingLeft="10dp"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="文本信息"
                />
            <LinearLayout 
                android:padding="10dp"
                android:orientation="horizontal"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="@color/writer"
                >
                <TextView 
                android:background="@color/writer"
                android:layout_width="0dp"
                android:layout_weight="3"
                android:layout_height="wrap_content"
                android:text="文本信息"
                />
                <TextView 
                android:background="@color/writer"
                android:layout_width="0dp"
                android:layout_weight="7"
                android:layout_height="wrap_content"
                android:text="文本信息"
                />
            </LinearLayout>
        </LinearLayout>
    </com.dong.yiping.ui.BounceScrollView>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@color/one_blue"
        android:gravity="center"
        android:orientation="horizontal" >

        <TextView
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:background="@drawable/applyinfo_btn_cur"
            android:gravity="center"
            android:padding="10dp"
            android:text="邀请面试"
            android:textColor="@color/writer"
            android:textSize="@dimen/text_size_18" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:background="@drawable/applyinfo_btn"
            android:gravity="center"
            android:padding="10dp"
            android:text="收藏简历"
            android:textColor="@color/writer"
            android:textSize="@dimen/text_size_18" />
    </LinearLayout>

</LinearLayout>